<%= form_for(@code) do |code_form| %>

	<div class="field">
		<%= code_form.label :content, "Snippet" %><br />
		<%= code_form.text_area :content %>
	</div>
	
	<div class="field">
		<%= code_form.label :description %><br />
		<%= code_form.text_area :description %>
	</div>
	
	<div class="field">
		<%= code_form.fields_for :tags do |builder| %>
			<%= render 'tag_fields', :code_form => builder %>
		<% end %>
	</div>

	<div class="actions">
		<%= code_form.submit %>
	</div>

<% end %>